<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="ch.demo.rcp.intro.commands.popup.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="ch.demo.rcp.intro.commands.popup.Perspective"
            id="ch.demo.rcp.intro.commands.popup.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="ch.demo.rcp.intro.commands.popup.View"
            id="ch.demo.rcp.intro.commands.popup.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="ch.demo.rcp.intro.commands.popup.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:ch.demo.rcp.intro.commands.popup.view">
         <command
               commandId="ch.demo.rcp.intro.commands.popup.showselected"
               label="One Item selected"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="ch.demo.rcp.intro.commands.popup.application"
            name="RCP Popup Application">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="ch.demo.rcp.intro.commands.popup.showselected"
            name="Show">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ch.demo.rcp.intro.commands.popup.handler.ShowSelected"
            commandId="ch.demo.rcp.intro.commands.popup.showselected">
      </handler>
   </extension>

</plugin>
