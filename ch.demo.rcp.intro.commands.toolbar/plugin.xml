<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="ch.demo.rcp.intro.commands.toolbar.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="ch.demo.rcp.intro.commands.toolbar.Perspective"
            id="ch.demo.rcp.intro.commands.toolbar.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="ch.demo.rcp.intro.commands.toolbar.View"
            id="ch.demo.rcp.intro.commands.toolbar.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="ch.demo.rcp.intro.commands.toolbar.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="ch.demo.rcp.intro.commands.toolbar.toolbar">
            <command
                  commandId="ch.demo.rcp.intro.commands.toolbar.hello"
                  icon="icons/alt_window_16.gif"
                  label="Say Hello"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="ch.demo.rcp.intro.commands.toolbar.application"
            name="RCP Toolbar Application">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="ch.demo.rcp.intro.commands.toolbar.handler.Hello"
            id="ch.demo.rcp.intro.commands.toolbar.hello"
            name="Hello">
      </command>
   </extension>

</plugin>
